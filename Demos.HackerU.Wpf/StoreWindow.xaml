<Window x:Class="Demos.HackerU.Wpf.StoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demos.HackerU.Wpf"
        mc:Ignorable="d"
        Title="StoreWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Canvas>
        <ComboBox SelectionChanged="comboCategories_SelectionChanged" Name="comboCategories" Canvas.Left="444" Canvas.Top="87" Width="180" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ComboBox SelectionChanged="comboCategories_SelectionChanged2" Name="comboCategoriesTop" Canvas.Left="220" Canvas.Top="87" Width="180" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListBox Name="ListBoxProducts" Background="WhiteSmoke" BorderThickness="2" BorderBrush="LightGray" Height="226" Width="500" Canvas.Left="176" Canvas.Top="139" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="ListBoxProducts_SelectionChanged"/>
        <Button Content="Delete" Canvas.Left="176" Canvas.Top="383" Height="23" Width="73" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="Add Product" Canvas.Left="270" Canvas.Top="383" Height="23" Width="107" Click="AddNewProduct"/>
    </Canvas>

</Window>
